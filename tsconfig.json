{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // "noImplicitAny": false,
    "baseUrl": "./src",
    "typeRoots": ["../node_modules/@types", "@types"]
  },
  "exclude": ["node_modules"],

  "include": [
    "next-env.d.ts",
    "custom.d.ts",
    "src/**/*.ts",
    "src/pages/instractors/index.js",

    "src/**/*.tsx",
    "src/components/utilities/Title.js",
    "src/components/CourseDetails",
    "src/components/Home/Hero.js",
    "src/components/utilities/Modal.js",
    "src/components/LatestCourses/LatestCourses.jsx",
    "src/components/Login/Login.js",
    "src/pages/shipping.js",
    "src/components/Register/Register.js",
    "src/pages/payment.js",
    "src/components/ManageCourse/ManageCourse.js",
    "src/components/Payment/Payment.js",
    "src/components/Payment/SimpleCardForm.js",
    "src/components/utilities/Header.js"
  ]
}
